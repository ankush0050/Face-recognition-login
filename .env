# .env - Environment Variables for Face Recognition System

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///face_recognition.db
# For PostgreSQL (when you upgrade):
# DATABASE_URL=postgresql://username:password@localhost:5432/face_recognition

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
MIN_CONFIDENCE_THRESHOLD=0.7

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=backend/data/employee_photos
TEMP_FOLDER=backend/data/temp

# Security Settings
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600

# Development Settings
DEBUG_MODE=True
LOG_LEVEL=INFO
